{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "classification-token.vocab.core-1.0.0",
  "title": "frontmatter/overlays/classification-token.vocab.core",
  "$defs": {
    "coreToken": {
      "type": "string",
      "enum": [
        "tutorial",
        "how-to",
        "reference",
        "explanation",
        "public",
        "internal",
        "confidential",
        "restricted",
        "compliance",
        "regulated"
      ]
    },
    "token": {
      "oneOf": [
        { "$ref": "#/$defs/coreToken" },
        {
          "type": "string",
          "pattern": "^x-[a-z0-9]+(?:-[a-z0-9]+)*$",
          "maxLength": 64
        }
      ]
    }
  }
}
