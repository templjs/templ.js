{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "audience-token.contract-1.0.0",
  "title": "frontmatter/contracts/audience-token",
  "description": "Extension contract for audience tokens. Supports canonical tokens and x-* extension tokens.",
  "oneOf": [
    {
      "type": "string",
      "pattern": "^x-[a-z0-9]+(?:-[a-z0-9]+)*$",
      "maxLength": 64
    },
    {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9]*(?:-[A-Za-z0-9]+)*$",
      "not": {
        "pattern": "^x-[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "maxLength": 64
    }
  ]
}
