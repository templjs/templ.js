{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://templjs.local/skills/hybrid-decision-analysis/references/output.schema.json",
  "title": "Hybrid Decision Analysis Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "scorer_version",
    "rules_version",
    "evaluated_at",
    "decision",
    "decision_status",
    "criteria_confirmed",
    "score_scale",
    "current_platform",
    "major_platforms",
    "criteria",
    "weights",
    "ranked_alternatives",
    "recommendation"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "scorer_version": {
      "type": "string",
      "minLength": 1
    },
    "rules_version": {
      "type": "string",
      "minLength": 1
    },
    "evaluated_at": {
      "type": "string",
      "format": "date-time"
    },
    "decision": {
      "type": "string",
      "minLength": 1
    },
    "decision_status": {
      "type": "string",
      "enum": ["proceed", "defer", "no-go"]
    },
    "criteria_confirmed": {
      "type": "boolean"
    },
    "score_scale": {
      "type": "string",
      "enum": ["0-100", "1-5"]
    },
    "current_platform": {
      "type": "string",
      "minLength": 1
    },
    "major_platforms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "weight", "metric", "data_source", "scoring_rule"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "weight": { "type": "number", "minimum": 0 },
          "metric": { "type": "string", "minLength": 1 },
          "data_source": { "type": "string", "minLength": 1 },
          "scoring_rule": { "type": "string", "minLength": 1 }
        }
      }
    },
    "weights": {
      "type": "object",
      "additionalProperties": false,
      "required": ["major_platform_average", "current_platform"],
      "properties": {
        "major_platform_average": { "type": "number", "minimum": 0 },
        "current_platform": { "type": "number", "minimum": 0 }
      }
    },
    "ranked_alternatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "name",
          "type",
          "effort",
          "risk",
          "effort_rank",
          "risk_rank",
          "rank",
          "feasible",
          "justification",
          "major_platform_average",
          "current_platform_score",
          "overall_success_score",
          "coverage",
          "count_coverage",
          "missing_values",
          "platform_scores",
          "notes"
        ],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["internal", "compose", "external", "build-new"]
          },
          "effort": { "type": "string" },
          "risk": { "type": "string" },
          "effort_rank": { "type": "integer", "minimum": 0 },
          "risk_rank": { "type": "integer", "minimum": 0 },
          "rank": { "type": "integer", "minimum": 1 },
          "feasible": { "type": "boolean" },
          "justification": { "type": "string", "minLength": 1 },
          "major_platform_average": { "type": "number" },
          "current_platform_score": { "type": "number" },
          "overall_success_score": { "type": "number" },
          "coverage": { "type": "number", "minimum": 0, "maximum": 1 },
          "count_coverage": { "type": "number", "minimum": 0, "maximum": 1 },
          "missing_values": { "type": "integer", "minimum": 0 },
          "platform_scores": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
              "type": "number"
            }
          },
          "notes": { "type": "string" }
        }
      }
    },
    "recommendation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "action",
        "chosen_option_ids",
        "top_option_id",
        "score_margin_vs_second",
        "reason",
        "rules"
      ],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["select", "compose", "improve", "extend", "build-new", "no-go"]
        },
        "chosen_option_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "top_option_id": {
          "type": "string",
          "minLength": 1
        },
        "score_margin_vs_second": {
          "type": "number"
        },
        "reason": {
          "type": "string",
          "minLength": 1
        },
        "rules": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        }
      }
    }
  }
}
