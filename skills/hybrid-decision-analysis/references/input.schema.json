{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://templjs.local/skills/hybrid-decision-analysis/references/input.schema.json",
  "title": "Hybrid Decision Analysis Input",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision",
    "criteria_confirmed",
    "current_platform",
    "criteria",
    "alternatives",
    "discovery"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "decision": {
      "type": "string",
      "minLength": 1
    },
    "criteria_confirmed": {
      "type": "boolean"
    },
    "score_scale": {
      "type": "string",
      "enum": ["0-100", "1-5"]
    },
    "current_platform": {
      "type": "string",
      "minLength": 1
    },
    "major_platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "weights": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "major_platform_average": {
          "type": "number",
          "minimum": 0
        },
        "current_platform": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "recommendation_rules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "select_min": { "type": "number" },
        "select_margin": { "type": "number" },
        "compose_min": { "type": "number" },
        "compose_margin": { "type": "number" },
        "improve_min": { "type": "number" },
        "extend_gap": { "type": "number" },
        "min_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "discovery": {
      "type": "object",
      "additionalProperties": false,
      "required": ["external_discovery_done", "external_discovery_blocked"],
      "properties": {
        "external_discovery_done": { "type": "boolean" },
        "external_discovery_blocked": { "type": "boolean" },
        "block_reason": { "type": "string" },
        "checked_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "criteria": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/criterion" }
    },
    "alternatives": {
      "type": "array",
      "minItems": 2,
      "items": { "$ref": "#/$defs/alternative" }
    }
  },
  "$defs": {
    "criterion": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "weight", "metric", "data_source", "scoring_rule"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "weight": {
          "type": "number",
          "minimum": 0
        },
        "metric": {
          "type": "string",
          "minLength": 1
        },
        "data_source": {
          "type": "string",
          "minLength": 1
        },
        "scoring_rule": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source_url", "source_date", "evidence_strength"],
      "properties": {
        "source_url": {
          "type": "string",
          "format": "uri",
          "minLength": 1
        },
        "source_date": {
          "type": "string",
          "format": "date"
        },
        "evidence_strength": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "alternative": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "type", "effort", "risk", "feasible", "justification", "scores"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["internal", "compose", "external", "build-new"]
        },
        "effort": {
          "type": "string",
          "enum": ["S", "M", "L"]
        },
        "risk": {
          "type": "string",
          "enum": ["Low", "Med", "High"]
        },
        "feasible": {
          "type": "boolean"
        },
        "justification": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string"
        },
        "evidence": {
          "type": "array",
          "items": { "$ref": "#/$defs/evidence" }
        },
        "scores": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "type": ["number", "null"]
            }
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": { "const": "external" }
            }
          },
          "then": {
            "required": ["evidence"],
            "properties": {
              "evidence": {
                "minItems": 1
              }
            }
          }
        }
      ]
    }
  }
}
