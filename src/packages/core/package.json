{
  "name": "@templjs/core",
  "version": "0.1.0",
  "description": "Core template parser, renderer, and query engine for templjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'No linting configured yet'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "template",
    "parser",
    "ast",
    "rendering",
    "templjs",
    "code-generation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/templjs.git",
    "directory": "packages/core"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.18.0",
    "ajv-formats": "^2.1.1",
    "chevrotain": "^11.0.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
