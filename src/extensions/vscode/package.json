{
  "name": "vscode-templjs",
  "displayName": "Templjs",
  "description": "Language support for templjs meta-templates",
  "version": "0.1.0",
  "publisher": "templjs",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "vscode-extension",
    "template",
    "templjs",
    "language-server"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "templjs.test",
        "title": "Templjs: Test Extension"
      }
    ],
    "languages": [
      {
        "id": "templjs-yaml",
        "aliases": [
          "Templjs YAML",
          "templjs-yaml"
        ],
        "extensions": [
          ".templ.yaml",
          ".templ.yml"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "templjs-json",
        "aliases": [
          "Templjs JSON",
          "templjs-json"
        ],
        "extensions": [
          ".templ.json"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "templjs-markdown",
        "aliases": [
          "Templjs Markdown",
          "templjs-md"
        ],
        "extensions": [
          ".templ.md"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "templjs-html",
        "aliases": [
          "Templjs HTML",
          "templjs-html"
        ],
        "extensions": [
          ".templ.html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.templjs",
        "path": "./syntaxes/templjs.tmLanguage.json"
      },
      {
        "language": "templjs-markdown",
        "scopeName": "text.templjs.markdown",
        "path": "./syntaxes/injection-markdown.json",
        "embeddedLanguages": {
          "meta.embedded.block.markdown": "markdown"
        }
      },
      {
        "language": "templjs-html",
        "scopeName": "text.templjs.html",
        "path": "./syntaxes/injection-html.json",
        "embeddedLanguages": {
          "meta.embedded.block.html": "html"
        }
      },
      {
        "language": "templjs-json",
        "scopeName": "text.templjs.json",
        "path": "./syntaxes/injection-json.json",
        "embeddedLanguages": {
          "meta.embedded.block.json": "json"
        }
      },
      {
        "language": "templjs-yaml",
        "scopeName": "text.templjs.yaml",
        "path": "./syntaxes/injection-yaml.json",
        "embeddedLanguages": {
          "meta.embedded.block.yaml": "yaml"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Templjs",
      "properties": {
        "templjs.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'No tests yet'",
    "lint": "echo \"No linting configured yet\" && exit 0",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@templjs/volar": "workspace:*",
    "@volar/language-server": "~2.0.0",
    "tslib": "^2.6.0",
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/templjs.git",
    "directory": "extensions/vscode"
  },
  "license": "Apache-2.0"
}
